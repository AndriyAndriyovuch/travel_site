<footer class="bg-black text-black">
  <div class="px-32 py-16 mx-auto">
    <div class="flex justify-between items-center">
      <p class="text-2xl font-bold">QWERy</p>

      <div class="flex items-baseline">
        <p class="mb-2 mr-5">Ready to explore?</p>
        <%= link_to "Get Started", "javascript:void(0)", class: "btn-orange" %>
      </div>
    </div>

    <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">

    <div class="flex justify-between mr-5">
      <div>
        <p class="max-w-xs text-xl font-semibold">
          Let's go on vacation,
        </p>
        <p class="max-w-xs text-xl font-semibold">
          Make your day
        </p>

        <div class="flex mt-8 space-x-6 text-gray-600">
          <%= form_with url: "/send_mail", method: :get do |form| %>
            <%= form.text_field :query, placeholder: "Email address", id: "contact-input", class: "bg-transparent" %>

            <%= form.submit "", id: "contact-submit" %>
          <% end %>
        </div>
      </div>

      <div>
        <p class="font-medium orange-text font-semibold">
          Services
        </p>
        <nav class="flex flex-col mt-4 space-y-2 text-sm text-gray-300">
          <%= link_to "Email marketing", "javascript:void(0)" %>
          <%= link_to "Campaigns", "javascript:void(0)" %>
          <%= link_to "Branding", "javascript:void(0)" %>
          <%= link_to "Offline", "javascript:void(0)" %>
        </nav>
      </div>

      <div>
        <p class="font-medium orange-text font-semibold">
          About
        </p>
        <nav class="flex flex-col mt-4 space-y-2 text-sm text-gray-300">
          <%= link_to "Our Story", "javascript:void(0)" %>
          <%= link_to "Benefits", "javascript:void(0)" %>
          <%= link_to "Team", "javascript:void(0)" %>
          <%= link_to "Careers", "javascript:void(0)" %>
        </nav>
      </div>

      <div>
        <p class="font-medium orange-text font-semibold">
          Help
        </p>
        <nav class="flex flex-col mt-4 space-y-2 text-sm text-gray-300">
          <%= link_to "FAQs", "javascript:void(0)" %>
          <%= link_to "Contact Us", "javascript:void(0)" %>
        </nav>
      </div>

    </div>

    <div class="flex justify-between items-center mt-12">
      <div>
        <%= link_to "Terms & Conditions", "javascript:void(0)", class: "mx-5 text-xs" %>
        <%= link_to "Privacy Policy", "javascript:void(0)", class: "mx-5 text-xs" %>
      </div>

      <div class="flex items-baseline">
        <%= button_to "https://www.facebook.com/" , class: "text-black mx-3" do %>
          <i class="fa-brands fa-facebook-f text-white"></i>
        <% end %>

        <%= button_to "https://twitter.com/" , class: "text-black mx-3" do %>
          <i class="fa-brands fa-twitter text-white"></i>
        <% end %>

        <%= button_to "https://www.instagram.com/" , class: "text-black mx-3" do %>
          <i class="fa-brands fa-instagram text-white"></i>
        <% end %>
      </div>
    </div>
    <p class="mt-8 text-xs font-semibold text-gray-500 text-center">
      Copyright <%= Date.current.year %> QWERy
    </p>
  </div>
</footer>
